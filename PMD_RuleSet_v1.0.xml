   <rule class="net.sourceforge.pmd.lang.rule.XPathRule" deprecated="false" dfa="false"
         language="xml"
         message="Don't use the '*' in select statement."
         name="DontUseAsterisk"
         typeResolution="true">
      <description>Don't use the '*' in select statement.</description>
      <priority>3</priority>
      <properties>
         <property name="version" value="2.0"/>
         <property name="xpath">
            <value>
            //text[
                matches(@Image,' \* ') or matches(@Image,' \*\t') or matches(@Image,' \*,')  or matches(@Image,' \*\n') or
                matches(@Image,'\t\* ') or matches(@Image,'\t\*\t') or matches(@Image,'\t\*,') or matches(@Image,'\t\*\n') or
                matches(@Image,'\n\* ') or matches(@Image,'\n\*\t') or matches(@Image,'\n\*,') or matches(@Image,'\n\*\n') or
                matches(@Image,'.\* ') or matches(@Image,'.\*\t') or matches(@Image,'.\*,') or matches(@Image,'.\*\n')
            ]
            </value>
         </property>
      </properties>
   </rule>

